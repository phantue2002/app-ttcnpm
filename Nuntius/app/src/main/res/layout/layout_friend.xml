<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"

            android:orientation="horizontal">

            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/friends_profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_default_img" />

            <LinearLayout
                android:layout_width="296dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/usernamefriends"
                        android:layout_width="241dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tên tài khoản"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/onlineiconfriends"
                        android:layout_width="13dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/onlineiconnuntius"
                        android:visibility="invisible" />

                </LinearLayout>

                <TextView
                    android:id="@+id/emailfriends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/datefriends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="Date"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/request_accept_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="#9DD366"
                        android:text="Đồng ý"
                        android:textSize="15sp"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/request_cancel_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="#D60431"
                        android:text="Từ chối"
                        android:textSize="15sp"
                        android:visibility="invisible" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>